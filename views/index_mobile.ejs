			let prompt = document.querySelector(".prompt"),
				noteSite = document.querySelector(".note-site"),
				promptBtn = prompt.querySelector(".btn"),
				mask = prompt.querySelector(".prompt-mask");
			prompt.addEventListener("touchstart", e => {
				e.preventDefault();
			});
			noteSite.onclick = () => {
				prompt.style.display = "block";
			};
			console.log("pr", promptBtn);
			promptBtn.onclick = () => {
				console.log("btn");
				// window.location.href = "/note";
			};
			mask.onclick = () => {
				console.log("mask");
			};
